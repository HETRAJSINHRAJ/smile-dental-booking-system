# Firebase Configuration
# Copy this file to .env.local and fill in your actual values

# Get these values from Firebase Console:
# https://console.firebase.google.com/project/smile-dental-booking-demo/settings/general

NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=smile-dental-booking-demo.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=smile-dental-booking-demo
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=smile-dental-booking-demo.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Optional: Firebase Measurement ID for Analytics
# NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Uploadcare Configuration (Image Upload Service)
# Sign up at: https://uploadcare.com/accounts/signup/
# Get your public key from: https://app.uploadcare.com/projects/-/api-keys/
NEXT_PUBLIC_UPLOADCARE_PUBLIC_KEY=your_uploadcare_public_key_here

# Uploadcare CDN Base URL (Custom CNAME domain)
# If you have a custom CNAME domain, add it here
# Example: https://6259lznt1b.ucarecd.net
# Leave empty to use default: https://ucarecdn.com
NEXT_PUBLIC_UPLOADCARE_CDN_BASE=https://6259lznt1b.ucarecd.net

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_PATIENT_PORTAL_URL=http://localhost:3000

# Currency Settings (optional)
# NEXT_PUBLIC_CURRENCY_CODE=USD
# NEXT_PUBLIC_CURRENCY_LOCALE=en-US
