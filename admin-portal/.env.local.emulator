# Firebase Emulator Configuration - Admin Portal
# Copy this to .env.local when using Firebase Emulator Suite

# Firebase Configuration (use emulator)
NEXT_PUBLIC_FIREBASE_API_KEY=demo-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=localhost
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-project
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=demo-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# Enable Firebase Emulator
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true
NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
NEXT_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost:8080
NEXT_PUBLIC_FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Sentry (disabled for local development)
# NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics (disabled for local development)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=

# App URLs
NEXT_PUBLIC_PATIENT_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001

# Payment Configuration (test mode)
NEXT_PUBLIC_RAZORPAY_KEY=rzp_test_demo
RAZORPAY_KEY_ID=rzp_test_demo
RAZORPAY_KEY_SECRET=demo_secret
NEXT_PUBLIC_APPOINTMENT_RESERVATION_FEE=500
NEXT_PUBLIC_ENABLE_SERVICE_PAYMENT_ONLINE=false
