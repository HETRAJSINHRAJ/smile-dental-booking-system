# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
FIREBASE_APP_ID=your_firebase_app_id_here

# Backend API Configuration
# For development: http://localhost:3000 (patient-portal running locally)
# For production: https://your-production-domain.com
BACKEND_URL=http://localhost:3000

# Payment Configuration
# Appointment reservation fee (fixed amount in INR, not percentage)
# Example: 500 means â‚¹500 reservation fee
APPOINTMENT_RESERVATION_FEE=500

# Enable online payment for service fees (true/false)
# If false, service payment will be collected at clinic during visit
# If true, service payment will be collected online during booking
ENABLE_SERVICE_PAYMENT_ONLINE=false

# GST Tax Rate (as decimal, e.g., 0.18 for 18%)
# This is applied to both appointment reservation fee and service fees
GST_TAX_RATE=0.18

# Convenience Fee (as decimal, e.g., 0.02 for 2%)
# Additional fee charged on top of the total amount
# Set to 0 for no convenience fee
CONVENIENCE_FEE=0

# Payment Gateway Configuration
# Razorpay API Key (test or production)
RAZORPAY_KEY=rzp_test_your_key_here

# Razorpay API Secret (test or production)
RAZORPAY_SECRET=your_razorpay_secret_here

# Sentry Error Tracking
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Firebase Analytics
FIREBASE_ANALYTICS_ENABLED=true

# Admin Portal URL (for receipt generation)
# For development: http://localhost:3001
# For production: https://admin.yourdomain.com
ADMIN_PORTAL_URL=http://localhost:3001

# Social Login Configuration
# Google Sign-In - Get from Google Cloud Console OAuth 2.0 Client IDs
# You need separate client IDs for iOS, Android, and Web
GOOGLE_IOS_CLIENT_ID=your-ios-client-id.apps.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your-android-client-id.apps.googleusercontent.com
GOOGLE_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com

# Facebook Login - Get from Facebook Developers Console
FACEBOOK_APP_ID=1234567890123456
FACEBOOK_APP_NAME=SmileDentalBooking
FACEBOOK_DISPLAY_NAME=Smile Dental Booking

# Apple Sign-In - Get from Apple Developer Portal Services ID
# Required for iOS apps in App Store
APPLE_SERVICE_ID=com.smiledental.web
