rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin (based on whitelist)
    function isAdmin() {
      return isAuthenticated() &&
             request.auth.token.email in get(/databases/$(database)/documents/config/adminWhitelist).data.emails;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Admin whitelist - balanced security for easy setup and ongoing management
    match /config/adminWhitelist {
      // Allow anyone to read the whitelist (needed for login verification)
      // This is safe because the whitelist only contains email addresses
      allow read: if true;

      // Allow initial creation if document doesn't exist (for first-time setup)
      // After creation, only admins can modify
      allow create: if !exists(/databases/$(database)/documents/config/adminWhitelist);

      // Allow authenticated admins to update/delete (for ongoing management)
      allow update, delete: if isAdmin();
    }

    // Other config documents
    match /config/{document} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile, admins can read all profiles
      allow read: if isOwner(userId) || isAdmin();

      // Users can create their own profile, admins can create any profile
      allow create: if (isAuthenticated() && request.auth.uid == userId) || isAdmin();

      // Users can update their own profile (except role and uid fields)
      allow update: if isOwner(userId) &&
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid']);

      // Admins can update any field including role
      allow update: if isAdmin();

      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Services collection
    match /services/{serviceId} {
      // Anyone can read services
      allow read: if true;
      // Only admins can create, update, or delete services
      allow create, update, delete: if isAdmin();
    }
    
    // Providers (dentists) collection
    match /providers/{providerId} {
      // Anyone can read providers
      allow read: if true;
      // Only admins can create, update, or delete providers
      allow create, update, delete: if isAdmin();
    }
    
    // Provider schedules subcollection
    match /providers/{providerId}/schedules/{scheduleId} {
      // Anyone can read schedules
      allow read: if true;
      // Only admins can create, update, or delete schedules
      allow create, update, delete: if isAdmin();
    }
    
    // Provider schedules collection (top-level) - Support both naming conventions
    match /provider_schedules/{scheduleId} {
      // Anyone can read schedules (needed for booking flow)
      allow read: if true;
      // Only admins can create, update, or delete schedules
      allow create, update, delete: if isAdmin();
    }
    
    // Provider schedules collection (camelCase version for mobile app)
    match /providerSchedules/{scheduleId} {
      // Anyone can read schedules (needed for booking flow)
      allow read: if true;
      // Only admins can create, update, or delete schedules
      allow create, update, delete: if isAdmin();
    }
    
    // Appointments collection
    match /appointments/{appointmentId} {
      // Allow reading appointments for:
      // 1. Authenticated users viewing their own appointments
      // 2. Admins viewing all appointments
      // 3. Anyone checking availability (for booking flow)
      //    Note: This is safe because appointment data doesn't expose sensitive info
      //    and is necessary for the booking system to show available time slots
      allow read: if true;
      
      // Users can create appointments for themselves, admins can create appointments for anyone
      allow create: if isAuthenticated() && 
                      (request.resource.data.userId == request.auth.uid || isAdmin());
      
      // Users can update their own appointments with restrictions:
      // - Can update: status (for cancellation), notes, cancellationReason, reschedule fields
      // - Cannot update: payment fields, receipt fields (server-side only)
      // Admins can update all fields
      allow update: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid && 
                        !request.resource.data.diff(resource.data).affectedKeys()
                          .hasAny(['receiptUrl', 'receiptGenerated', 'receiptGeneratedAt', 'receiptId', 
                                   'paymentAmount', 'paymentStatus', 'paymentTransactionId', 
                                   'servicePaymentAmount', 'servicePaymentStatus']) &&
                        // Validate reschedule count doesn't exceed max (unless admin)
                        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['rescheduleCount']) ||
                         request.resource.data.rescheduleCount <= request.resource.data.get('maxReschedules', 2))) 
                       || isAdmin();
      
      // Only admins can delete appointments
      allow delete: if isAdmin();
    }
    
    // Contact inquiries collection
    match /contactInquiries/{inquiryId} {
      // Users can create contact inquiries
      allow create: if true;
      // Only admins can read, update, or delete inquiries
      allow read, update, delete: if isAdmin();
    }
    
    // Payment audit logs collection
    match /payment_audit_logs/{logId} {
      // Allow creation of payment audit logs for authenticated users
      // This is necessary for payment tracking and debugging
      allow create: if isAuthenticated();
      
      // Users can read their own payment logs, admins can read all
      allow read: if isAuthenticated() && 
                     (resource.data.patientId == request.auth.uid || isAdmin());
      
      // Only admins can update or delete payment logs
      allow update, delete: if isAdmin();
    }
    
    // Audit logs collection (for data access tracking and compliance)
    match /auditLogs/{logId} {
      // Allow creation of audit logs for authenticated users
      // This is necessary for tracking all administrative actions
      allow create: if isAuthenticated();
      
      // Only admins can read audit logs (for compliance and monitoring)
      allow read: if isAdmin();
      
      // No one can update or delete audit logs (immutable for compliance)
      allow update, delete: if false;
    }
    
    // Legacy audit_logs collection (for backward compatibility)
    match /audit_logs/{logId} {
      // Allow creation of audit logs for authenticated users
      allow create: if isAuthenticated();
      
      // Only admins can read audit logs
      allow read: if isAdmin();
      
      // No one can update or delete audit logs (immutable)
      allow update, delete: if false;
    }
    
    // User activity logs (for security monitoring)
    match /user_activity_logs/{activityId} {
      // Allow creation for authenticated users
      allow create: if isAuthenticated();
      
      // Users can read their own activity logs, admins can read all
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      // No updates or deletes (immutable logs)
      allow update, delete: if false;
    }
    
    // Encrypted medical data collection
    match /encrypted_medical_data/{dataId} {
      // Users can only access their own encrypted medical data
      allow read, write: if isAuthenticated() && 
                            resource.data.userId == request.auth.uid;
      
      // Admins can read all encrypted medical data
      allow read: if isAdmin();
      
      // Only the owner can delete their encrypted data
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Receipts collection (optional - currently using appointment document for receipt metadata)
    // Note: Receipt generation is handled server-side via Admin SDK
    // Receipt metadata (receiptUrl, receiptGenerated, receiptGeneratedAt, receiptId) 
    // is stored in the appointments collection and managed by the server
    match /receipts/{receiptId} {
      // Users can read their own receipts, admins can read all
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      // System can create receipts (when appointments are confirmed)
      // Users can create receipts for their own appointments
      allow create: if isAuthenticated() && 
                       (request.resource.data.userId == request.auth.uid || isAdmin());
      
      // Only admins can update receipts (for corrections or refunds)
      allow update: if isAdmin();
      
      // Only admins can delete receipts
      allow delete: if isAdmin();
    }
    
    // FCM Tokens Collection (for push notifications)
    match /fcmTokens/{tokenId} {
      // Users can only read/write their own tokens
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Admins can read all tokens (for monitoring)
      allow read: if isAdmin();
    }
    
    // Notifications Collection
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Only server can create notifications (via Admin SDK)
      // This prevents users from creating fake notifications
      allow create: if false;
      
      // Users can update their own notifications (mark as read)
      // Only allow updating 'read' and 'readAt' fields
      allow update: if isAuthenticated() 
        && resource.data.userId == request.auth.uid
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt']);
      
      // Users cannot delete notifications (for audit trail)
      allow delete: if false;
      
      // Admins can read all notifications
      allow read: if isAdmin();
      
      // Admins can delete notifications (for cleanup)
      allow delete: if isAdmin();
    }
    
    // Notification Preferences Collection
    match /notificationPreferences/{userId} {
      // Users can only read/write their own preferences
      allow read: if isAuthenticated() && userId == request.auth.uid;
      allow write: if isAuthenticated() && userId == request.auth.uid;
      
      // Admins can read all preferences
      allow read: if isAdmin();
    }
    
    // Reviews Collection
    match /reviews/{reviewId} {
      // Anyone can read approved reviews (for public display on provider profiles)
      allow read: if resource.data.status == 'approved';
      
      // Authenticated users can read their own reviews (any status)
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Admins can read all reviews (for moderation)
      allow read: if isAdmin();
      
      // Authenticated users can create reviews for their own appointments
      // Reviews must be created with status 'pending'
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == 'pending'
        && request.resource.data.rating >= 1 
        && request.resource.data.rating <= 5
        && request.resource.data.comment.size() >= 10;
      
      // Users can update their own pending reviews (before approval)
      // Can only update: rating, comment
      allow update: if isAuthenticated() 
        && resource.data.userId == request.auth.uid
        && resource.data.status == 'pending'
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['rating', 'comment', 'updatedAt']);
      
      // Admins can update any review (for moderation and responses)
      // Can update: status, response, respondedBy, respondedAt
      allow update: if isAdmin();
      
      // Only admins can delete reviews
      allow delete: if isAdmin();
    }
    
    // Waitlist Collection
    match /waitlist/{waitlistId} {
      // Authenticated users can read their own waitlist entries
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Admins can read all waitlist entries
      allow read: if isAdmin();
      
      // Authenticated users can create waitlist entries for themselves
      // Must include required fields and status must be 'active'
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == 'active'
        && request.resource.data.keys().hasAll(['userId', 'userName', 'userEmail', 'providerId', 
                                                  'providerName', 'serviceId', 'serviceName', 
                                                  'preferredDate', 'preferredTime', 'status', 
                                                  'createdAt', 'updatedAt']);
      
      // Users can update their own waitlist entries
      // Can only update: status (to 'cancelled'), cancellationReason, cancelledAt
      allow update: if isAuthenticated() 
        && resource.data.userId == request.auth.uid
        && request.resource.data.status == 'cancelled'
        && request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['status', 'cancellationReason', 'cancelledAt', 'updatedAt']);
      
      // Admins can update any waitlist entry (for notifications and management)
      allow update: if isAdmin();
      
      // Users can delete their own waitlist entries
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Admins can delete any waitlist entry
      allow delete: if isAdmin();
    }
  }
}